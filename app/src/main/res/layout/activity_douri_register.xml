    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/douri_reg_ImaBtn_img"
                    android:layout_marginTop="150dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorWhite"
                    android:src="@drawable/add_photo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="이름(*)"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>



                <EditText
                    android:id="@+id/douri_reg_ET_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                android:background="@drawable/rounded2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="나이(*)"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="성별(*)"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:hint="남/여"
                    android:textColorHint="@color/black_overlay"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="주소(*)"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="전화번호(*)"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:hint="독거노인의 전화번호 입력해주세요.(-)빼고 입력"
                    android:textColorHint="@color/black_overlay"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="병력"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="웨어러블밴드추가"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="카메라추가"
                    android:textSize="20dp"
                    android:fontFamily="@font/dohyeonregular"/>

                <EditText
                    android:id="@+id/douri_reg_ET_cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:padding="5dip"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:background="@drawable/rounded2"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/douri_reg_Btn_ok"
                    android:foreground="@drawable/_ripple_effect3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/okbtn"
                    android:layout_marginRight="15dp"
                />

                <ImageView
                    android:id="@+id/douri_reg_Btn_cancel"
                    android:foreground="@drawable/_ripple_effect3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/cancelbtn"

                    />








            </LinearLayout>


        </LinearLayout>









    </ScrollView>








</LinearLayout>

