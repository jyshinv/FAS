<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DouriCCTV2Activity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorFAS"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/douri_cctv2_IV_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:layout_marginLeft="15dp"
            android:foreground="@drawable/_ripple_effect3"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실시간"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15.5dp"
            android:fontFamily="@font/dohyeonregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCTV"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15.5dp"
            android:fontFamily="@font/dohyeonregular"/>

    </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <WebView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/webView" />

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:layout_gravity="center"
          android:background="@drawable/rounded2">


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">



              <TextView
                  android:id="@+id/douri_st_TV_name"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="이름"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>

              <TextView
                  android:id="@+id/douri_st_TV_age"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="나이"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_sex"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="성별"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_addr"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="주소"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_phone"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="전화번호"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_history"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="병력"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_wb"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="웨어러블밴드"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>
              <TextView
                  android:id="@+id/douri_st_TV_cam"
                  android:textColor="@color/colorBlack"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="캠추가"
                  android:layout_margin="5dp"
                  tools:textColor="@color/colorBlack"/>


          </LinearLayout>

      </ScrollView>

  </LinearLayout>


</LinearLayout>