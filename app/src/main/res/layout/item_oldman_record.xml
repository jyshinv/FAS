<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    >
    <LinearLayout
        android:id="@+id/oldman_record_ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/_ripple_effect"
        android:gravity="center">

        <!--android:scaleType="fitCenter"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/oldman_record_iv_profile"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oldman_record_tv_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#70FFAF91"
                android:text="낙상 값 : "
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/oldman_record_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="낙상 시간 : "
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/oldman_record_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="낙상인 이름 : "
                android:textColor="@color/colorBlack" />







        </LinearLayout>


    </LinearLayout>


</LinearLayout>